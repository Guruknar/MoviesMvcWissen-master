@model List<_036_MoviesMvcWissen.Entities.Movie>
@{
    ViewBag.Title = "Movies";
}

<h2>@ViewBag.Title</h2>

<form action="~/Movies/Add">
<input type="submit" value="Add Movie" />
</form>
<form action="~/Movies/Delete">
    <input type="submit" value="Delete Movie" />
</form>
<a href="~/Movies/Add" >Add Movie</a>
<a href="~/Movies/Delete">delete Movie</a>
<br />
<span style="color: chocolate;">@Model.Count() movies found</span>
<table class="table" style="background-color: lightblue;">
    <tr>
        <td>
            <b>Name</b>
        </td>
        <td>
            <b>Production Year</b>
        </td>
        <td>
            <b>Box Office Return</b>
        </td>
    </tr>

    @foreach (var movie in Model)
    {
        <tr>
            <td>
                @movie.Name
            </td>
            <td>
                @movie.ProductionYear
            </td>
            <td>
                @movie.BoxOfficeReturn
            </td>
        </tr>

    }


</table>

