    </form>*@

<form action="~/Movies/Add">
    <button type="submit" class="btn btn-success">Add</button>
</form>

<a href="~/Movies/Add">Add Movie</a>&nbsp; @*Yazı genellikle kullanılıyor add de*@


<br />

<label class="text-success">@TempData["Info"]</label>
<br />

@*<span style="color: chocolate;">@Model.Count() movies found</span>*@ @* bu da bir yol*@
@*<span>@ViewData["count"] records found.</span>*@
<span style="color: chocolate;">@ViewBag.count records found.</span>
<table class="table">
    <tr>
        <td></td>
        <td>
            <b>Name</b>
        </td>
        <td>
            <b>Production Year</b>
        </td>
        <td>
            <b>Box Office Return</b>
        </td>
    </tr>

    @foreach (var movie in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(" ", "Details", new { id = movie.Id }, new { @class = "fa fa-question-circle fa-lg text-warning" })
                &nbsp;
                @Html.ActionLink(" ", "Edit", new { id = movie.Id }, new { @class = "fa fa-pencil-square fa-lg text-success" }) &nbsp;
                @Html.ActionLink(" ", "Delete", new { id = movie.Id }, new { @class = "fa fa-trash fa-lg text-danger" })
            </td>
            <td>
                @movie.Name
            </td>
            <td>
                @movie.ProductionYear
            </td>
            <td>
                @movie.BoxOfficeReturn
            </td>
        </tr>
    }


</table>

