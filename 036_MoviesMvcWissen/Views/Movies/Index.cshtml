@model List<_036_MoviesMvcWissen.Entities.Movie>
@{
    ViewBag.Title = "Movies";
}

<h2>@ViewBag.Title</h2>



@*<form action="~/Movies/Add">
<input type="submit" value="Add Movie" />
</form>
<form action="~/Movies/Delete">
    <input type="submit" value="Delete Movie" />
</form>*@
<form action="~/Movies/Add">
    <button type="submit" class="btn btn-success">Add</button>
</form>

<a href="~/Movies/Add" >Add Movie</a>&nbsp;


<br />

<label class="text-success">@TempData["Info"]</label>
<br />

@*<span style="color: chocolate;">@Model.Count() movies found</span>*@ @* bu da bir yol*@
@*<span>@ViewData["count"] records found.</span>*@
<span style="color: chocolate;">@ViewBag.count records found.</span>
<table class="table" >
    <tr>
        <td>

        </td>
        <td>
            <b>Name</b>
        </td>
        <td>
            <b>Production Year</b>
        </td>
        <td>
            <b>Box Office Return</b>
        </td>
    </tr>

    @foreach (var movie in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = movie.Id }) &nbsp;|&nbsp;
                @Html.ActionLink("Delete", "Delete", new { id = movie.Id })
            </td>
            <td>
                @movie.Name
            </td>
            <td>
                @movie.ProductionYear
            </td>
            <td>
                @movie.BoxOfficeReturn
            </td>
        </tr>
    }


</table>

