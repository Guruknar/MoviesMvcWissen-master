@using (Html.BeginForm("Edit", "Movies", FormMethod.Post))
{
    @Html.Hidden("Id", Model.Id)
    @*<input type="hidden" name="Id" value="@Model.Id" />*@
    <div class="form-group">
        @Html.Label("tbName","Name:  ")&emsp;&emsp;&emsp;&emsp;&emsp;&nbsp;
        @Html.TextBox("Name", Model.Name, new { @class = "form-control-sm",placeholder ="Enter movie name", id="tbName" })
    </div>
    <div class="form-group">
        @Html.Label("ddlProductionYear", "Production Year:")&emsp;
        @Html.DropDownList("ProductionYear", years, new { @class = "form-control-sm", id="ddlProductionYear" })
    </div>
    <div class="form-group">
        @Html.Label("tbBoxOfficeReturn", "Box Office Return:")&nbsp;
        @Html.TextBox("BoxOfficeReturn", Model.BoxOfficeReturn, new { @class = "form-control-sm",
       placeholder = "Enter movie box office return", id = "tbBoxOfficeReturn" })
    </div>
   
    <input type="submit" class="btn btn-success" value="Save" />
    @:&nbsp;
    <input type="reset" class="btn btn-warning" value="Clear" />
}



