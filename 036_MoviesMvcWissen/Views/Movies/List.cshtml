@model  _036_MoviesMvcWissen.Models.ViewModels.MoviesIndexViewModel
@using _036_MoviesMvcWissen.Helpers

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-2">
            @Html.Label("lbName", "Name:")
        </div>
        <div class="col-md-10">
            @Html.TextBox("Name", "", new { @class = "form-control", id = "lbName" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">
            @Html.Label("lbPYear", "Production Year:")
        </div>
        <div class="col-md-10">
            @Html.DropDownList("YearId", Model.Years, "---All---", new { @class = "form-control", id = "lbPYear" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">
            @Html.Label("lbBoxOfficeReturn", "Box Office Return:")
        </div>
        @*<div class="col-md-1">Between</div>*@
        Between
        <div class="col-md-4">
            @Html.TextBox("Min", "", new { @class = "form-control", id = "lbBoxOfficeReturn", placeholder = "min" })
        </div>
        @*<div class="col-md-1">And</div>*@
        And
        <div class="col-md-4">
            @Html.TextBox("Max", "", new { @class = "form-control", placeholder = "max" })
        </div>
    </div>
    <br />


    <div class="row">
        <div class="col-md-1">
            @Html.Button("Search", "btn btn-primary", "Submit")
        </div>
        <div class="col-md-3">
            @Html.ActionLink("Clear","List","Movies", new { @class = "btn btn-secondary" })
            <a class="btn btn-secondary" href="@Url.RouteUrl("Default", new { controller = "Movies", action = "List"})">Clear</a>
        </div>
    </div>
    <br />
}



<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Production Year
        </th>
        <th>
            Box Office Return
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model.Movies)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductionYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoxOfficeReturn)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
            </td>
        </tr>
    }

</table>
